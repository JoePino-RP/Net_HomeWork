@model List<MVCTarea.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Mis Datos";
}

<h2>@ViewBag.Title </h2>

<div class="row" style="text-align:right;padding:10px">
    <a href="~/Tabla_Datos/Nuevo" class="btn btn-primary">Nuevo</a>
</div>



<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Genero</th>
                <th>Cargo</th>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Edad</td>
                    <td>@oElemento.Genero</td>
                    <td>@oElemento.Cargo</td>
                    <td>
                        <a class="btn btn-primary" href="~/Tabla_Datos/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Tabla_Datos/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

